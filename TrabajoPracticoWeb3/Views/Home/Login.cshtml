
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!-- Top content -->
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Programación Web III</strong> Login</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Inicie sesión en nuestro sitio</h3>
                            <p>Introduzca su nombre de usuario y contraseña:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="IniciarSesion" method="post" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="NombreUsuario">Usuario</label>
                                <input type="text" name="NombreUsuario" placeholder="Usuario..." class="form-username form-control">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="Password">Contraseña</label>
                                <input type="password" name="Password" placeholder="Contraseña..." class="form-password form-control">
                            </div>
                            <button type="submit" class="btn">Ingrese!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
