
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    @model TrabajoPracticoWeb3.App_Data.Usuarios
}

<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Programación Web III</strong> Login</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Inicie sesión en nuestro sitio</h3>
                            <p>Introduzca su nombre de usuario y contraseña:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        @using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post, new { @class = "login-form" }))
                        {
                            <div class="form-group">
                                @Html.LabelFor(x => x.NombreUsuario, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.NombreUsuario, new { @class = "form-username form-control", placeholder = "Usuario..." })
                                @Html.ValidationMessageFor(x => x.NombreUsuario)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password, new { @class = "sr-only" })
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-password form-control", placeholder = "Contraseña..." })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                            <button type="submit" class="btn">Ingrese!</button>
                        }
                        @if (@ViewBag.Mensaje != null)
                        {
                            <div class="text-danger">
                                @ViewBag.Mensaje
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
