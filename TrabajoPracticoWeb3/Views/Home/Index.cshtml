
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LHome.cshtml";
}

@model IEnumerable<TrabajoPracticoWeb3.App_Data.Carteleras>


 <!-- Header Carousel -->
<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('../../Images/avenger.gif');"></div>
            <div class="carousel-caption">
                <h2>Avengers</h2>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('../../Images/silence.jpg');"></div>
            <div class="carousel-caption">
                <h2>Silence</h2>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('../../Images/star.jpg');"></div>
            <div class="carousel-caption">
                <h2>Rogue One</h2>
            </div>
        </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</header>

 <!-- Portfolio Section -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Cartelera</h2>
    </div>

    @foreach (var cartelera in Model)
    {

        <div class="col-md-4 col-sm-6">
            <a href="@Url.Action("Reserva", "Peliculas", new { idPelicula = cartelera.IdPelicula } )">
                <div class="img-min">
                    <img class="img-responsive img-portfolio img-hover" src='@Url.Action("GetImage", "Home", new { image = cartelera.Peliculas.Imagen.ToString() } )' />
                </div>
            </a>
            <div class="img-portfolio">
                <p class="btn btn-default">@cartelera.Peliculas.Nombre</p>
                <p class="btn btn-default">@cartelera.Peliculas.Generos.Nombre</p>
                <p class="btn btn-default">@cartelera.Peliculas.Calificaciones.Nombre</p>
            </div>
        </div>

    }

</div>
<!-- /.row -->



