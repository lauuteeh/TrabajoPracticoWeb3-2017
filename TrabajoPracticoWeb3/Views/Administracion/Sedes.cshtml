
@{
    ViewBag.Title = "Sedes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model IEnumerable<TrabajoPracticoWeb3.App_Data.Sedes>
}

<h2>Sedes</h2>

<button onclick="window.location.href='AltaSede'" class="btn btn-success">Nueva Sede</button>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Precio General</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sede in Model)
        {
            <tr>

                <td>@sede.Nombre</td>
                <td>@sede.Direccion</td>
                <td>$ @sede.PrecioGeneral</td>
                <td><a href="EditarSede?id=@sede.IdSede"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td><a href="EliminarSede?id=@sede.IdSede"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a></td>
            </tr>
        }

    </tbody>
</table>