
@{
    ViewBag.Title = "AltaCartelera";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model IEnumerable<TrabajoPracticoWeb3.App_Data.Carteleras>
}

<h2>AltaCartelera</h2>


<form action="AltaCartelera" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="sel1">Sede:</label>
        <select class="form-control" name="Sedes" id="sel1">
            @foreach (var sede in ViewBag.Sedes)
            {
                <option value="@sede.IdSede">@sede.Nombre</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label for="sel1">Pelicula:</label>
        <select class="form-control" name="Peliculas" id="sel1">
            @foreach (var peli in ViewBag.Peli)
            {
                <option value="@peli.IdPelicula">@peli.Nombre</option>
            }

        </select>
    </div>
    <div class="form-group">
        <label for="HoraInicio">Hora de inicio:</label>
        <input type="time" class="form-control" id="HoraInicio" name="HoraInicio">
    </div>
    <div class="form-group">
        <label for="Descripcion">Días:</label>
        <input type="checkbox" class="form-control" name="chk_group[]" value="1" />Lunes<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="2" />Martes<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="3" />Miercoles<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="4" />Jueves<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="5" />Viernes<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="6" />Sabado<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="7" />Domingo<br />
    </div>
    <div class="form-group">
        <label for="FechaInicio">Fecha de inicio:</label>
        <input type="date" class="form-control" id="FechaInicio" name="FechaInicio">
    </div>
    <div class="form-group">
        <label for="FechaFin">Fecha de fin:</label>
        <input type="date" class="form-control" id="FechaFin" name="FechaFin">
    </div>
    <div class="form-group">
        <label for="NumeroSala">Número de sala:</label>
        <input type="text" class="form-control" id="NumeroSala" name="NumeroSala">
    </div>
    <div class="form-group">
        <label for="sel1">Pelicula:</label>
        <select class="form-control" name="Versiones" id="sel1">
            @foreach (var ver in ViewBag.Version)
            {
                <option value="@ver.IdVersion">@ver.Nombre</option>
            }

        </select>
    </div>





    <button type="submit" class="btn btn-default">Submit</button>
</form>