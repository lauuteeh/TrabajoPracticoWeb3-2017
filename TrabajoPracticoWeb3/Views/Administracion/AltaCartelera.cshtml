
@{
    ViewBag.Title = "AltaCartelera";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model TrabajoPracticoWeb3.App_Data.Carteleras
}

<h2>AltaCartelera</h2>

@using (Html.BeginForm("AltaCartelera", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.IdSede)
        @Html.DropDownListFor(x => x.IdSede, new SelectList(ViewBag.Sedes, "IdSede", "Nombre"))
        @Html.ValidationMessageFor(x => x.IdSede)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IdPelicula)
        @Html.DropDownListFor(x => x.IdPelicula, new SelectList(ViewBag.Peli, "IdPelicula", "Nombre"))
        @Html.ValidationMessageFor(x => x.IdPelicula)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.HoraInicio)
        @Html.TextBoxFor(x => x.HoraInicio, new { @class = "form-control"})
        @Html.ValidationMessageFor(x => x.HoraInicio)
    </div>
    <div class="form-group">
        <label for="Descripcion">Días:</label>
        <input type="checkbox" class="form-control" name="chk_group[]" value="1" />Lunes<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="2" />Martes<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="3" />Miercoles<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="4" />Jueves<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="5" />Viernes<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="6" />Sabado<br />
        <input type="checkbox" class="form-control" name="chk_group[]" value="7" />Domingo<br />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FechaInicio)
        @Html.TextBoxFor(x => x.FechaInicio, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(x => x.FechaInicio)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FechaFin)
        @Html.TextBoxFor(x => x.FechaFin, new { @class = "form-control", type="date" })
        @Html.ValidationMessageFor(x => x.FechaFin)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NumeroSala)
        @Html.TextBoxFor(x => x.NumeroSala, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NumeroSala)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IdVersion)
        @Html.DropDownListFor(x => x.IdVersion, new SelectList(ViewBag.Version, "IdVersion", "Nombre"))
        @Html.ValidationMessageFor(x => x.IdVersion)
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
}

