
@{
    ViewBag.Title = "Peliculas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model IEnumerable<TrabajoPracticoWeb3.App_Data.Peliculas>
 }

<h2>Peliculas</h2>
<button onclick="window.location.href='AltaPelicula'" class="btn btn-success">Nueva pelicula</button>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Duración</th>
            <th>Imagen</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var peli in Model)
        {
            <tr>
                
                <td>@peli.Nombre</td>
                <td>@peli.Descripcion</td>
                <td>@peli.Duracion</td>
                <td>@peli.Imagen</td>
                <td><a href="editarPelicula?id=@peli.IdPelicula"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
               <!-- <td><a href="eliminarPelicula?id=@peli.IdPelicula"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a></td>-->
            </tr>
        }
        
    </tbody>
</table>