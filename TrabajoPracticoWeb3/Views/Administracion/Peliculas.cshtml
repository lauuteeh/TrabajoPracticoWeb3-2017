
@{
    ViewBag.Title = "Peliculas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model IEnumerable<TrabajoPracticoWeb3.App_Data.Peliculas>
 }

<h2>Peliculas</h2>
<a href="AltaPelicula">Nueva Pelicula</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Duración</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var peli in Model)
        {
            <tr>
                
                <td>@peli.Nombre</td>
                <td>@peli.Descripcion</td>
                
                <td>@peli.Duracion</td>
                <td><img src="../Images/@peli.Imagen" width="50px" height="50px"/></td>
                <td><a href="editarPelicula?id=@peli.IdPelicula"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
            </tr>
        }
        
    </tbody>
</table>