
@{
    ViewBag.Title = "AltaPelicula";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    @model TrabajoPracticoWeb3.App_Data.Peliculas

}

<h2>Alta Pelicula</h2>


@using (Html.BeginForm("AltaPelicula", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Nombre)
        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @maxlength = "50" })
        <span class="text-danger"> @Html.ValidationMessageFor(x => x.Nombre)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Descripcion)
        @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control", @maxlength = "750" })
        <span class="text-danger"> @Html.ValidationMessageFor(x => x.Descripcion)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IdGenero)
        @Html.DropDownListFor(x => x.IdGenero, new SelectList(ViewBag.Generos, "IdGenero", "Nombre"), new { @class = "form-control" })
        <span class="text-danger"> @Html.ValidationMessageFor(x => x.IdGenero)</span>
    </div>
    <div class="form-group">
        <label for="exampleInputFile">Inserte una imagen</label>
        <input type="file" id="exampleInputFile" name="Imagen">
        <p class="help-block">Imagen JPF o PNG.</p>
        <span class="text-danger"> @Html.ValidationMessageFor(x => x.Imagen) @ViewBag.Message</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IdCalificacion)
        @Html.DropDownListFor(x => x.IdCalificacion, new SelectList(ViewBag.Calificaciones, "IdCalificacion", "Nombre"), new { @class = "form-control" })
        <span class="text-danger"> @Html.ValidationMessageFor(x => x.IdCalificacion)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Duracion)
        @Html.TextBoxFor(x => x.Duracion, new { @class = "form-control", @maxlength = "4" })
        <span class="text-danger"> @Html.ValidationMessageFor(x => x.Duracion)</span>
    </div>


    <button type="submit" class="btn btn-default">Enviar</button>
}
