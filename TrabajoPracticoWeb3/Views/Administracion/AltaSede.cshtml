
@{
    ViewBag.Title = "AltaSede";
    @model TrabajoPracticoWeb3.App_Data.Sedes
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Alta Sede</h2>

@using (Html.BeginForm("AltaSede", "Administracion", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Nombre)
        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" , @maxlength = "100" })
        <span class="text-danger">@Html.ValidationMessageFor(x => x.Nombre)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Direccion)
        @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control", @maxlength = "300" })
        <span class="text-danger">@Html.ValidationMessageFor(x => x.Direccion)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PrecioGeneral)
        @Html.TextBoxFor(x => x.PrecioGeneral, new { @class = "form-control" , @maxlength = "18" })
        <span class="text-danger">@Html.ValidationMessageFor(x => x.PrecioGeneral)</span>
    </div>
    <button type="submit" class="btn btn-default">Enviar</button>
}


